<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SmartChef - gRPC Preizku≈°evalnik</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .grpc-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .grpc-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .grpc-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

        .grpc-card h2 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.4em;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
        }

        .grpc-card p {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 15px;
            line-height: 1.4;
        }

        .form-group {
            margin-bottom: 12px;
        }

        label {
            display: block;
            color: #333;
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9em;
        }

        input, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 0.95em;
            transition: border-color 0.3s ease;
        }

        input:focus, select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        button {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease;
            font-size: 0.95em;
        }

        button:hover {
            transform: scale(1.02);
        }

        button:active {
            transform: scale(0.98);
        }

        .loading {
            display: none;
            text-align: center;
            color: #667eea;
            margin-top: 10px;
            font-size: 0.9em;
        }

        .loading.show {
            display: block;
        }

        .spinner {
            display: inline-block;
            width: 12px;
            height: 12px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #667eea;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-right: 8px;
            vertical-align: middle;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .results {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .results h2 {
            color: #667eea;
            margin-bottom: 20px;
            font-size: 1.4em;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
        }

        .result-item {
            background: #f8f9fa;
            padding: 15px;
            border-left: 4px solid #667eea;
            margin-bottom: 12px;
            border-radius: 4px;
        }

        .result-item strong {
            color: #333;
            display: block;
            margin-bottom: 8px;
            font-size: 1.05em;
        }

        .result-info {
            color: #666;
            font-size: 0.9em;
            line-height: 1.6;
        }

        .price {
            color: #27ae60;
            font-weight: bold;
            font-size: 1.1em;
        }

        .store {
            color: #8e44ad;
            font-weight: 500;
        }

        .error {
            background: #fee;
            border-left-color: #e74c3c;
            color: #c0392b;
        }

        .success {
            background: #efe;
            border-left-color: #27ae60;
            color: #27ae60;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-top: 10px;
        }

        .stat-box {
            background: white;
            padding: 12px;
            border-radius: 6px;
            border-top: 3px solid #667eea;
        }

        .stat-label {
            color: #999;
            font-size: 0.8em;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .stat-value {
            color: #667eea;
            font-size: 1.3em;
            font-weight: bold;
        }

        .tab-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .tab-btn {
            padding: 10px 20px;
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .tab-btn.active {
            background: #667eea;
            color: white;
        }

        .tab-btn:hover {
            transform: translateY(-2px);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 1.8em;
            }

            .grpc-container {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üöÄ SmartChef - gRPC Preizku≈°evalnik</h1>

        <div class="grpc-container">
            <!-- 1. Search Products -->
            <div class="grpc-card">
                <h2>üîç Iskanje proizvodov</h2>
                <p>Poi≈°ƒçite proizvode po kljuƒçni besedi in kategoriji</p>
                <div class="form-group">
                    <label>Kljuƒçna beseda:</label>
                    <input type="text" id="searchQuery" placeholder="npr. maslo, mleko...">
                </div>
                <div class="form-group">
                    <label>Kategorija (opciono):</label>
                    <input type="text" id="searchCategory" placeholder="npr. mleƒçni proizvodi">
                </div>
                <div class="form-group">
                    <label>Max rezultatov:</label>
                    <input type="number" id="searchMaxResults" value="10" min="1" max="50">
                </div>
                <button onclick="callSearchProducts()">I≈°ƒçi preko gRPC</button>
                <div class="loading" id="loadingSearch">
                    <span class="spinner"></span> Iskanje v teku...
                </div>
            </div>

            <!-- 2. Get by Category -->
            <div class="grpc-card">
                <h2>üìÇ Proizvodi po kategoriji</h2>
                <p>Filtrirajte proizvode po kategoriji in ceni</p>
                <div class="form-group">
                    <label>Kategorija:</label>
                    <input type="text" id="categoryName" placeholder="npr. sadje, zelenjava">
                </div>
                <div class="form-group">
                    <label>Min cena (‚Ç¨):</label>
                    <input type="number" id="minPrice" value="0" step="0.1">
                </div>
                <div class="form-group">
                    <label>Max cena (‚Ç¨):</label>
                    <input type="number" id="maxPrice" value="100" step="0.1">
                </div>
                <button onclick="callGetByCategory()">Filtriraj preko gRPC</button>
                <div class="loading" id="loadingCategory">
                    <span class="spinner"></span> Filtriranje v teku...
                </div>
            </div>

            <!-- 3. Product Stats -->
            <div class="grpc-card">
                <h2>üìä Statistika proizvoda</h2>
                <p>Pridobite statistiko cen za izbrani proizvod</p>
                <div class="form-group">
                    <label>ID ali ime proizvoda:</label>
                    <input type="text" id="productId" placeholder="npr. maslo, mleko">
                </div>
                <button onclick="callGetStats()">Pridobi statistiko</button>
                <div class="loading" id="loadingStats">
                    <span class="spinner"></span> Pridobivanje v teku...
                </div>
            </div>

            <!-- 4. Get All Products -->
            <div class="grpc-card">
                <h2>üì¶ Vsi proizvodi</h2>
                <p>Pridobite seznam vseh proizvodov iz baze</p>
                <p style="color: #999; font-size: 0.85em; margin-top: 10px;">Popoln seznam vseh razpolo≈æljivih proizvodov v sistemu</p>
                <button onclick="callGetAllProducts()" style="margin-top: 20px;">Pridobi vse proizvode</button>
                <div class="loading" id="loadingAll">
                    <span class="spinner"></span> Pridobivanje v teku...
                </div>
            </div>

            <!-- 5. Watch Price Updates -->
            <div class="grpc-card">
                <h2>üîî Spremljanje cen (Streaming)</h2>
                <p>Spremljajte posodobitve cen v realnem ƒçasu</p>
                <div class="form-group">
                    <label>Kategorija za spremljanje:</label>
                    <input type="text" id="watchCategory" placeholder="npr. mleƒçni proizvodi">
                </div>
                <button onclick="callWatchPrices()">Zaƒçni spremljati cene</button>
                <div class="loading" id="loadingWatch">
                    <span class="spinner"></span> Streaming v teku...
                </div>
            </div>
        </div>

        <!-- Results Section -->
        <div class="results">
            <div class="tab-buttons">
                <button class="tab-btn active" onclick="showTab('results')">üìã Rezultati</button>
                <button class="tab-btn" onclick="showTab('console')">üìù Konzola</button>
            </div>

            <div id="results" style="display: block;">
                <div id="resultsList" class="empty-state">
                    <p>Rezultati se bodo prikazali tukaj...</p>
                </div>
            </div>

            <div id="console" style="display: none;">
                <div id="consoleLogs" style="background: #1e1e1e; color: #00ff00; padding: 15px; border-radius: 6px; font-family: 'Courier New', monospace; font-size: 0.9em; max-height: 400px; overflow-y: auto; white-space: pre-wrap; word-wrap: break-word;">
                    ‚ûú gRPC Konzola - Log nepravilnosti
                </div>
            </div>
        </div>
    </div>

    <script>
        // Logger
        const logs = [];
        const maxLogs = 50;

        function addLog(message) {
            const timestamp = new Date().toLocaleTimeString();
            logs.unshift(`[${timestamp}] ${message}`);
            if (logs.length > maxLogs) logs.pop();
            updateConsoleLogs();
        }

        function updateConsoleLogs() {
            document.getElementById('consoleLogs').textContent = logs.join('\n');
        }

        function showTab(tab) {
            document.getElementById('results').style.display = tab === 'results' ? 'block' : 'none';
            document.getElementById('console').style.display = tab === 'console' ? 'block' : 'none';
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }

        function displayResults(title, items, type = 'products') {
            let html = `<div class="result-item success"><strong>${title}</strong></div>`;
            
            if (type === 'stats') {
                const s = items;
                html += `
                    <div class="result-item">
                        <strong>üì¶ ${s.product_name || 'Neznano'}</strong>
                        <div class="result-info">
                            <div><strong>ID:</strong> ${s.product_id}</div>
                            <div><strong>Povpreƒçna cena:</strong> <span class="price">${s.average_price}‚Ç¨</span></div>
                            <div><strong>Razpolo≈æljivost:</strong> ${s.availability_count} trgovin</div>
                            <div><strong>Najni≈æja cena:</strong> <span class="store">${s.lowest_price_store}</span></div>
                            <div><strong>Najvi≈°ja cena:</strong> <span class="store">${s.highest_price_store}</span></div>
                        </div>
                    </div>
                `;
            } else if (Array.isArray(items)) {
                items.slice(0, 20).forEach(item => {
                    if (item.product_name) {
                        // Streaming update
                        html += `
                            <div class="result-item">
                                <strong>üìå ${item.product_name}</strong>
                                <div class="result-info">
                                    <div><strong>Cena:</strong> <span class="price">${item.new_price}‚Ç¨</span></div>
                                    <div><strong>Trgovina:</strong> <span class="store">${item.store}</span></div>
                                    <div><strong>ƒåas:</strong> ${new Date(item.update_time).toLocaleTimeString()}</div>
                                </div>
                            </div>
                        `;
                    } else if (item.name) {
                        // Regular product
                        html += `
                            <div class="result-item">
                                <strong>üì¶ ${item.name}</strong>
                                <div class="result-info">
                                    <div><strong>Kategorija:</strong> ${item.category}</div>
                                    <div><strong>Cena:</strong> <span class="price">${item.price}‚Ç¨</span></div>
                                    <div><strong>Trgovina:</strong> <span class="store">${item.store}</span></div>
                                    <div><strong>Koliƒçina:</strong> ${item.quantity}</div>
                                </div>
                            </div>
                        `;
                    }
                });
            }

            document.getElementById('resultsList').innerHTML = html;
            addLog(`‚úÖ ${title} - Prikazano ${Array.isArray(items) ? items.length : 1} rezultatov`);
        }

        function displayError(error) {
            const html = `<div class="result-item error"><strong>‚ùå Napaka</strong><div>${error}</div></div>`;
            document.getElementById('resultsList').innerHTML = html;
            addLog(`‚ùå Napaka: ${error}`);
        }

        async function callSearchProducts() {
            const query = document.getElementById('searchQuery').value;
            const category = document.getElementById('searchCategory').value;
            const maxResults = parseInt(document.getElementById('searchMaxResults').value);

            if (!query) {
                displayError('Vnesite kljuƒçno besedo!');
                return;
            }

            document.getElementById('loadingSearch').classList.add('show');
            addLog(`üîç SearchProducts - Query: "${query}", Category: "${category}"`);

            try {
                const response = await fetch('/api/grpc/search', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ query, category, maxResults })
                });

                const result = await response.json();
                if (result.success) {
                    displayResults(`üîç Rezultati iskanja: "${query}"`, result.data.products);
                } else {
                    displayError(result.error);
                }
            } catch (err) {
                displayError(err.message);
            } finally {
                document.getElementById('loadingSearch').classList.remove('show');
            }
        }

        async function callGetByCategory() {
            const category = document.getElementById('categoryName').value;
            const minPrice = parseFloat(document.getElementById('minPrice').value);
            const maxPrice = parseFloat(document.getElementById('maxPrice').value);

            if (!category) {
                displayError('Vnesite kategorijo!');
                return;
            }

            document.getElementById('loadingCategory').classList.add('show');
            addLog(`üìÇ GetProductsByCategory - Category: "${category}", Price: ${minPrice}‚Ç¨ - ${maxPrice}‚Ç¨`);

            try {
                const response = await fetch('/api/grpc/category', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ category, minPrice, maxPrice })
                });

                const result = await response.json();
                if (result.success) {
                    displayResults(`üìÇ Proizvodi v kategoriji: "${category}"`, result.data.products);
                } else {
                    displayError(result.error);
                }
            } catch (err) {
                displayError(err.message);
            } finally {
                document.getElementById('loadingCategory').classList.remove('show');
            }
        }

        async function callGetStats() {
            const productId = document.getElementById('productId').value;

            if (!productId) {
                displayError('Vnesite ID ali ime proizvoda!');
                return;
            }

            document.getElementById('loadingStats').classList.add('show');
            addLog(`üìä GetProductStats - Product ID: "${productId}"`);

            try {
                const response = await fetch('/api/grpc/stats', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId })
                });

                const result = await response.json();
                if (result.success) {
                    displayResults(`üìä Statistika proizvoda`, result.data, 'stats');
                } else {
                    displayError(result.error);
                }
            } catch (err) {
                displayError(err.message);
            } finally {
                document.getElementById('loadingStats').classList.remove('show');
            }
        }

        async function callGetAllProducts() {
            document.getElementById('loadingAll').classList.add('show');
            addLog(`üì¶ GetAllProducts - Pridobivanje vseh proizvodov`);

            try {
                const response = await fetch('/api/grpc/all', {
                    method: 'GET',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();
                if (result.success) {
                    displayResults(`üì¶ Vsi proizvodi (${result.data.total_count} skupaj)`, result.data.products);
                } else {
                    displayError(result.error);
                }
            } catch (err) {
                displayError(err.message);
            } finally {
                document.getElementById('loadingAll').classList.remove('show');
            }
        }

        async function callWatchPrices() {
            const category = document.getElementById('watchCategory').value;

            if (!category) {
                displayError('Vnesite kategorijo za spremljanje!');
                return;
            }

            document.getElementById('loadingWatch').classList.add('show');
            addLog(`üîî WatchPriceUpdates - Streaming cen za kategorijo: "${category}"`);

            try {
                const response = await fetch('/api/grpc/watch', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ category })
                });

                const result = await response.json();
                if (result.success) {
                    displayResults(`üîî Posodobitve cen za kategorijo: "${category}"`, result.data, 'streaming');
                } else {
                    displayError(result.error);
                }
            } catch (err) {
                displayError(err.message);
            } finally {
                document.getElementById('loadingWatch').classList.remove('show');
            }
        }

        // Inicializacija
        addLog('‚úÖ gRPC Preizku≈°evalnik se je uspe≈°no nalo≈æil');
    </script>
</body>
</html>
